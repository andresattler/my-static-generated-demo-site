body, h1
  margin 0
a
  color: inherit;
  text-decoration: none;
body
  background-color: #E6E6E6
  overflow-x: hidden;
header
  height 300px
  width 100%
  display flex
  flex-flow column
  align-items center
  justify-content center
  background-color #1F2124
  color white
nav
  height 35px
  background-color #545353
  color white
  text-align: center;
  margin-bottom: 30px
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
  a
    display: inline-block;
    font-size: 18px
    padding 5px 10px
#wrapper
  margin 15px
  display: flex;
  flex-flow: column;
  align-items: center;
  @media (min-width: 1200px)
    flex-flow: row;
    align-items: flex-start;
    justify-content: center;
main
  display: flex
  flex-flow: column;
  align-items: center;
  article
    width 90vw
    background-color: white
    box-sizing: border-box;
    margin-bottom: 15px
    border-radius: 10px
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    padding 25px
    h1
      text-align: center
      margin-top: 10px
    p
      a
        text-decoration: underline;
    img
      width 100%
      height auto
    code
      width 100%
      display block
      border-radius: 10px
      padding 5px
      overflow auto
      background-color: #faf8f0
    @media (min-width: 1200px)
      width 800px
aside
  width 90vw
  height 500px
  div
    padding 15px
    background-color: white;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    text-align: center;
    margin-bottom 10px
    img
      border-radius: 50%
    p
      a
        text-decoration: underline;
  #social
    a
      display: inline-block;
      width 50px
      height 50px
      margin 5px
      text-align: center;
      svg
        display: block
        width 100%
        height 100%
        path
          box-sizing: inherit;
  @media (min-width: 1200px)
    width 300px
    margin-left: 15px
footer
  height 100px
  background-color: #545353
  text-align: center;
  p
    padding-top 50px
  a
    color: white
.hljs {
  display: block;
  overflow-x: auto;
  padding: 0.5em;
  color: #abb2bf;
  background: #282c34;
}

.hljs-comment,
.hljs-quote {
  color: #5c6370;
  font-style: italic;
}

.hljs-doctag,
.hljs-keyword,
.hljs-formula {
  color: #c678dd;
}

.hljs-section,
.hljs-name,
.hljs-selector-tag,
.hljs-deletion,
.hljs-subst {
  color: #e06c75;
}

.hljs-literal {
  color: #56b6c2;
}

.hljs-string,
.hljs-regexp,
.hljs-addition,
.hljs-attribute,
.hljs-meta-string {
  color: #98c379;
}

.hljs-built_in,
.hljs-class .hljs-title {
  color: #e6c07b;
}

.hljs-attr,
.hljs-variable,
.hljs-template-variable,
.hljs-type,
.hljs-selector-class,
.hljs-selector-attr,
.hljs-selector-pseudo,
.hljs-number {
  color: #d19a66;
}

.hljs-symbol,
.hljs-bullet,
.hljs-link,
.hljs-meta,
.hljs-selector-id,
.hljs-title {
  color: #61aeee;
}

.hljs-emphasis {
  font-style: italic;
}

.hljs-strong {
  font-weight: bold;
}

.hljs-link {
  text-decoration: underline;
}
